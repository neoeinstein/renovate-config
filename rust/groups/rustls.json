{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Rustls ecosystem crates",
  "packageRules": [
    {
      "groupName": "rustls crates",
      "matchDatasources": [
        "crate"
      ],
      "matchManagers": [
        "cargo"
      ],
      "matchPackageNames": [
        "hyper-rustls",
        "rustls",
        "rustls-native-certs",
        "tokio-rustls",
        "webpki",
        "webpki-roots"
      ]
    }
  ]
}
