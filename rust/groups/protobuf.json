{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "groupName": "protobuf & gRPC crates",
      "matchDatasources": [
        "crate"
      ],
      "matchManagers": [
        "cargo"
      ],
      "matchPackagePatterns": [
        "^prost[-_]?",
        "^tonic[-_]?"
      ]
    }
  ]
}
